<html>
<head>
        <meta charset="utf-8">
        <meta content="Jeroen De Meerleer" name="author">
        <meta content="yes" name="apple-mobile-web-app-capable">
        <meta content="black-translucent" name="apple-mobile-web-app-status-bar-style">
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">

        <title>Jeroen De Meerleer :: Developer-Operator</title>
        <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
        <link href="{{ asset('bundles/portfolio/reveal.js/css/reveal.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/portfolio/reveal.js/css/print/pdf.css') }}" media="print" rel='stylesheet' type='text/css'>
        <link href="{{ asset('bundles/portfolio/css/jquery.mCustomScrollbar.css') }}" rel='stylesheet' type='text/css'>
        <link href="{{ asset('bundles/portfolio/css/reveal.css') }}" rel='stylesheet' type='text/css'>
        <link href="{{ asset('bundles/portfolio/css/jeroened.css') }}" rel='stylesheet' type='text/css'>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="{{ asset('bundles/portfolio/reveal.js/lib/js/head.min.js') }}"></script>
        <script src="{{ asset('bundles/portfolio/reveal.js/js/reveal.min.js') }}"></script>
        <script src="{{ asset('bundles/portfolio/js/reveal.js') }}"></script>
        <script src="{{ asset('bundles/portfolio/js/jeroened.js') }}"></script>
        <script src="{{ asset('bundles/portfolio/js/jquery.mCustomScrollbar.concat.min.js') }}"></script>
	<script src="{{ asset('bundles/portfolio/js/analytics.js') }}"></script>
	
        <!--[if lt IE 9]>
            <script src="{{ asset('bundles/portfolio/reveal.js/lib/js/html5shiv.js') }}"></script>
        <![endif]-->
    </head>

    <body>
        <div class="reveal">
            <div class="slides">
                {% for item in portfolio %}
                    <section>
                        {% for page in item.pages %}
                            <section{% if 'Slug' in page|keys %} id="{{page.Slug}}"{% endif %}{% if 'Background' in page|keys  %} data-background="{{page.Background}}"{% endif %}>{% if page.ShowTitle == true %}<h1>{{ item.title }}</h1>{% endif %}{{ page.Html | raw }}</section>
                        {% endfor %}
                    </section>
                {% endfor %}
            </div>
        </div>
        <div class="logo">
            JeroenED
        </div>    
        <nav>
        <div class="navholder clearfix">
            <div class="navlabel">
                <p>Menu</p>
            </div>

            <div class="navicon"><img alt="navicon" src="{{ asset('bundles/portfolio/images/navicon.png') }}"></div>
        </div>
        <ul>
            {% for item in menu %}
                <li><a {% if item.external == true %}href="{{ item.destination }}" target="_blank"{% else %}href="javascript:void(0)" data-page="{{ item.destination }}"{% endif %}>{{ item.label }}</a></li>
            {% endfor %}
        </ul>
    </nav>
        <div class="copyright">
        <p>&copy; copyright 2015 Jeroen De Meerleer | v0.5</p>
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
