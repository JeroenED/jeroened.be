{% extends 'JeroenEDCmsEDBundle::base.html.twig' %}
{% block body %}
<h1>Menu Module</h1>
{% if not message is  empty %}
    <div class="message">{{ message }}</div>
{% endif %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>Label</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.label }}</td>
                <td>
                    <a href="{{ path('menu_edit', { 'id': menu.id }) }}">edit</a> |
                    <a href="{{ path('menu_details', { 'id': menu.id }) }}">details</a> |
                    <a onclick="return confirm('Are you sure you want to delete {{ menu.label }}?')" href="{{ path('menu_delete', { 'id': menu.id }) }}">delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<p><a href="{{ path('menu_create') }}">Create new menu</a></p>
{% endblock %}
