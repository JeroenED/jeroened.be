{% extends 'JeroenEDCmsEDBundle::base.html.twig' %}
{% block body %}
<h1>Portfolio Module</h1>
{% if not message is empty %}
    <div class="message">{{ message }}</div>
{% endif %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>title</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {% for item in portfolio %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.title }}</td>
                <td>
                    <a href="{{ path('portfolio_edit', { 'id': item.id }) }}">edit</a> |
                    <a href="{{ path('portfolio_details', { 'id': item.id }) }}">details</a> |
                    <a onclick="return confirm('Are you sure you want to delete {{ item.title }}?')" href="{{ path('portfolio_delete', { 'id': item.id }) }}">delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<p><a href="{{ path('portfolio_create') }}">Create new item</a></p>
{% endblock %}
