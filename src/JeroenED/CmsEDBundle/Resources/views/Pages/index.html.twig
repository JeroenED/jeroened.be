{% extends 'JeroenEDCmsEDBundle::base.html.twig' %}
{% block body %}
<h1>Pages Module</h1>
{% if not message is  empty %}
    <div class="message">{{ message }}</div>
{% endif %}
<table>
    <tbody>
        {% for page in pages %}
            <tr>
                <td class="col-label">
                    <p>{{ page.title }} - <span class="col-slug">{{ page.slug }}</span></p>
                    <p class="col-actions">
                        <a href="{{ path('page_edit', { 'id': page.id }) }}">edit</a> |
                        <a href="{{ path('page_details', { 'id': page.id }) }}">details</a> |
                        <a href="javascript: void(0);" class="confirmLink act-delete" data-text="Are you sure you want to delete {{ page.title }}?" data-link="{{ path('page_delete', { 'id': page.id }) }}">delete</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}