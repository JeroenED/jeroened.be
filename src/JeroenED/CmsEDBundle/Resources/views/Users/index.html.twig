{% extends 'JeroenEDCmsEDBundle::base.html.twig' %}
{% block body %}
    <h1>Users Module</h1>
{% if not message is  empty %}
    <div class="message">{{ message }}</div>
{% endif %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>Name (e-mail)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td class="col-id">{{ user.id }}</td>
                <td class="col-label">{{ user.username }} ({{ user.email }})</td>
                <td class="col-actions">
                    <a href="{{ path('users_edit', { 'id': user.id }) }}">edit</a> |
                    <a href="{{ path('users_details', { 'id': user.id }) }}">details</a> |
                    <a href="javascript: void(0);" class="confirmLink"  data-text="Are you sure you want to delete {{ user.username }}?" data-link="{{ path('users_delete', { 'id': user.id }) }}">delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
